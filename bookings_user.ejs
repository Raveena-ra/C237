<!DOCTYPE html>
<html>
<head> <!-- by Charlene -->
    <title>My Bookings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="background-color: rgb(248, 239, 230);">
    <div class="container mt-5">
        <h2 class="mb-4">Appointments</h2>

        <!--  Search + Date Filter Form by Raveena  -->
        <form class="mb-4" method="GET" action="/bookings_user">
            <div class="row g-2">
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" placeholder="Search by pet name, species, or breed" value="<%= typeof search !== 'undefined' ? search : '' %>">
                </div>

                <div class="col-md-4">
                    <select name="dateFilter" class="form-select">
                        <option value="" <%= dateFilter === '' ? 'selected' : '' %>>All</option>
                        <option value="upcoming" <%= dateFilter === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
                        <option value="past" <%= dateFilter === 'past' ? 'selected' : '' %>>Past</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">Filter</button>
                </div>
            </div>
        </form>

        <!-- 🐾 Appointment Table -->
        <% if (bookings.length > 0) { %>
            <table class="table table-bordered table-striped mt-4">
                <thead>
                    <tr>
                        <th>Pet Name</th>
                        <th>Species</th>
                        <th>Breed</th>
                        <th>Appointment Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(function(booking) { %>
                        <tr>
                            <td><%= booking.pet_name %></td>
                            <td><%= booking.species %></td>
                            <td><%= booking.breed %></td>
                            <td><%= new Date(booking.appointment_date).toLocaleString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="mt-4">You have no appointments that match the search/filter.</p>
        <% } %>
    </div>
</body>
</html>
